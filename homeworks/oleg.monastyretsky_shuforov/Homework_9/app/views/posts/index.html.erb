<h1>Posts</h1>
<% unless @post.find_by(user_id: current_user.id).nil?%>
<% @post.where(user_id: current_user.id).each do |post|%>
<table>
   <tr>
   <th style="text-align: left"><%=post.title%></th>
   </tr>
   <tr>
   <td style="border: 1px solid black"><%=post.body%></td>
   </tr>
</table>
<%= link_to 'Edit', edit_user_post_path(post.user_id, post.id) %>
<%= link_to 'Delete', user_post_path(post.user_id, post.id),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
<br>
<% end %>
<% else %>
<p>This user did not create post yet</p>
<% end %>

<%= link_to 'Back', user_path(current_user.id)%>
