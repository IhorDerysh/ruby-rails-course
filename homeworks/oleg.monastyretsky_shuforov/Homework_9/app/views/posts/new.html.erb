<h1>Create post</h1>
<%= form_for :post, url: user_posts_path(current_user) do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :body%><br>
    <%= f.text_area :body%>
  </p>
 
  <p>
    <%= f.submit 'Create post'%>
  </p>
<% end %>

<%= link_to 'Back', user_path(current_user.id)%>
