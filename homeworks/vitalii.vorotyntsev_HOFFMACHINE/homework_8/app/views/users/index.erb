<h2 class="ui dividing header">List of users</h2>

<a class="ui button" href="/users/new">Add new</a>

<div class="ui hidden divider"></div>

<div class="ui cards">
  <% @users.each do |user| %>
  <div class="ui card">
    <div class="image">
      <img src="http://placehold.it/300x300">
    </div>
    <div class="content">
      <a class="header"><%= user.first_name %> <%= user.last_name %></a>

      <div class="meta">
        <span class="email"><%= user.email %></span>
      </div>
      <div class="description">
        <p><%= user.about %></p>
      </div>
    </div>
    <div class="extra content">
      <i class="sticky note icon"></i> <%= user.posts.count %> posts
    </div>
    <div class="extra content">
      <a class="ui button" href="/users/<%= user.id %>/edit">Edit</a>
      <a class="ui button" href="/users/<%= user.id %>/remove">Remove</a>
    </div>
  </div>
  <% end %>
</div>
