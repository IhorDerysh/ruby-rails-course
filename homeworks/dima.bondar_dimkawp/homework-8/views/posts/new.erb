<h1>Create Post</h1>

<form action="create" method="post">
  <p>Title:</p>
  </br>
  <input id="post_title" name="post[title]" type="text" value="<%= @post.title %>" /> </br>

  <p>Body</p>
  </br>
  <textarea id="post_body" name="post[body]" cols="50" rows="10"><%= @post.body %></textarea> </br>

  <input type="submit" value="Create" />
</form>