<div class="container">
  <h1>Login</h1>
  <form action="/login" method="post" class="form-inline">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
    <div class="form-group">
      <label class="sr-only">Name: </label>
      <input name="user[name]" type="text" class="form-control" placeholder="name">
    </div>
    <div class="form-group">
      <label class="sr-only">Email: </label>
      <input name="user[email]" type="email" class="form-control" placeholder="email">
    </div>
    <button type="submit" class="btn btn-default" value="login">Sign in</button>
  </form>
  <hr>

</div>
