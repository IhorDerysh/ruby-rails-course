<div class="container">
  <h1>Editing Post</h1>
  <form action="/posts/<%= @post.id %>" method="post" class="form-inline">
    <input type="hidden" name="_method" value="put" />
    <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
    <div class="form-group">
      <label class="sr-only">Name: </label>
      <input name="post[title]" type="text" class="form-control" placeholder="name" value="<%= @post.title %>">
    </div>
    <div class="form-group">
      <label class="sr-only">Email: </label>
      <input name="post[body]" type="text" class="form-control" placeholder="email" value="<%= @post.body %>">
    </div>
    <button type="submit" class="btn btn-default" value="Edit">Edit</button>
  </form>
  <hr>
  <form action="/posts">
    <button type="submit" class="btn btn-primary">All Posts</button>
  </form>
</div>