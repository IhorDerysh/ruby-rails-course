<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <h1 align="center">Welcome to Rails</h1>
    <hr>
    <% if logged_in? %>
        <h3 align="center">Welcome, <%= current_user.name %></h3>
        <div align="center">
        <button type="button" class="btn btn-default">
        <%= link_to 'My all posts', user_path(current_user) %>
        </button>
        <button type="button" class="btn btn-default">
        <%= link_to 'Edit profile', edit_user_path(current_user) %>
        </button>
        <button type="button" class="btn btn-default">
        <%= link_to 'Log out', logout_path, method: :delete %>
        </button>
        </div>
    <% else %>
        <div align="center">
          <button type="button" class="btn btn-default">
            <%= link_to 'Sign Up', new_user_path %>
          </button>
          <button type="button" class="btn btn-default">
            <%= link_to 'Log In', login_path %>
          </button>
        </div>
    <% end %>
    <hr />
      <br>
    <form align="center" action="/users">
      <button type="submit" class="btn btn-primary btn-lg">All Users</button>
    </form>
    <br>
    <form align="center" action="/posts">
      <button type="submit" class="btn btn-default btn-lg">All Posts</button>
    </form>
  </div>
</div>