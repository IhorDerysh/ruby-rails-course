<div class="container">
  <h1>Editing User</h1>
  <form action="/users/<%= @user.id %>" method="post" class="form-inline">
    <input type="hidden" name="_method" value="put" />
    <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
    <div class="form-group">
      <label class="sr-only">Name: </label>
      <input name="user[name]" type="text" class="form-control" placeholder="name" value="<%= @user.name %>">
    </div>
    <div class="form-group">
      <label class="sr-only">Email: </label>
      <input name="user[email]" type="text" class="form-control" placeholder="email" value="<%= @user.email %>">
    </div>
    <button type="submit" class="btn btn-default" value="Edit">Edit</button>
  </form>
  <hr>
  <form action="/users">
    <button type="submit" class="btn btn-primary">All Users</button>
  </form>
</div>