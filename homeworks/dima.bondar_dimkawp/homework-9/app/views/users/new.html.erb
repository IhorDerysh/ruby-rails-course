
<div class="container">
  <h1>Add User</h1>
  <form action="/users" method="post" class="form-inline">
    <div class="form-group">
      <label class="sr-only">Name: </label>
      <input name="user[name]" type="text" class="form-control" placeholder="name">
    </div>
    <div class="form-group">
      <label class="sr-only">Email: </label>
      <input name="user[email]" type="text" class="form-control" placeholder="email">
    </div>
    <button type="submit" class="btn btn-default" value="Create">Sign in</button>
  </form>
  <hr>
  <form action="/users">
    <button type="submit" class="btn btn-primary">All Users</button>
  </form>
</div>
